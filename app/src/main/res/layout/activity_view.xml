<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.sch.smktelkom_mlg.pw.utjournal.ViewActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        >

        <TextView
            android:id="@+id/tvNRP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="08964887"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvInstructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Selina Kusmiawati"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvBranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="BLP"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="75dp"
            android:text="TTA Balikpapan"
            android:textAlignment="center"
            android:textSize="14sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleActivity"
                android:text="Activity"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/edtcodejob1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleActivity"
                android:layout_marginTop="8dp"
                android:hint="@string/codejob"
                android:layout_marginLeft="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/dash1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edtcodejob1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/edtcodejob1"
                android:layout_toRightOf="@+id/edtcodejob1"
                android:text="-"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/edtcodecat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dash1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/dash1"
                android:layout_toRightOf="@+id/dash1"
                android:hint="@string/codecat"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/dash2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edtcodecat1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/edtcodecat1"
                android:layout_toRightOf="@+id/edtcodecat1"
                android:text="-"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/edtcategory1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dash2"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/dash2"
                android:layout_toRightOf="@+id/dash2"
                android:hint="@string/category"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/edtactivity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtcodejob1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="@string/activity"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/edtdescription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/edtactivity1"
                android:hint="@string/description"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/edtsapsomp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtdescription1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:hint="@string/sapsomp"
                android:textColor="@android:color/background_dark"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titlePeriode"
                android:text="Periode"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/edtstart1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/titlePeriode"
                android:hint="@string/start"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/dash3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edtstart1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/edtstart1"
                android:layout_toRightOf="@+id/edtstart1"
                android:text="-"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/edtend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dash3"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/dash3"
                android:layout_toRightOf="@+id/dash3"
                android:hint="@string/end"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/dash4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edtend1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/edtend1"
                android:layout_toRightOf="@+id/edtend1"
                android:text="-"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/edMonth1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dash4"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/dash4"
                android:hint="@string/month"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/dash5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edMonth1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/edMonth1"
                android:layout_toRightOf="@+id/edMonth1"
                android:text="-"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/edthours1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dash5"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/dash5"
                android:hint="@string/hours"
                android:textColor="@android:color/background_dark"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleDetail"
                android:text="Details"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/edtVenue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleDetail"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:hint="@string/venue"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/edtVendor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtVenue1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="@string/vendor"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/edtunit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtVendor1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="@string/unittype"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/edtremark1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtunit1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="@string/remark"
                android:inputType="textMultiLine"
                android:textColor="@android:color/background_dark" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>

</android.support.v4.widget.NestedScrollView>
