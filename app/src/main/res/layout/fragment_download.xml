<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smktelkom_mlg.pw.utjournal.DownloadFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Download Data"
                    android:textColor="#3E2723"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edfilename"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/edittextstyle"
                    android:hint="@string/filename"
                    android:inputType="text"
                    android:textAlignment="center" />

                <!--<EditText
                    android:id="@+id/edtstart"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/edittextstyle"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/start"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/edtend"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/edittextstyle"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/end"
                    android:textAlignment="center" />-->

                <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/buttonstyle"
                    android:drawableLeft="@drawable/ic_file_download_black_24dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/download"
                    android:textColor="#fff" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</FrameLayout>
